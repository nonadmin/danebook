<!-- Form wrapping panel body and footer (to include 
    Save Changes button) -->
<%= form_for(profile, url: profile_path) do |profile_form| %>

    <div class="panel-body">
      <div class="row">

        <div class="col-md-4">
          <div class="form-horizontal">

              <div class="row">
                <div class="col-xs-12">
                  <h4>Basic Information</h4>            
                </div>
              </div>

              <div class="form-group">
                <%= profile_form.label :birthday, class: "col-xs-4" %>
                <div class="col-xs-8">
                  <p class="form-control-static">
                    <%= profile.birthday.strftime("%B #{profile.birthday.day.ordinalize}, %Y") %>
                  </p>
                </div>
              </div>

              <div class="form-group">
                <%= profile_form.label :college, class: "col-xs-4" %>
                <div class="col-xs-8">
                  <%= profile_form.text_field :college %>
                </div>
              </div>

              <div class="form-group">
                <%= profile_form.label :hometown, class: "col-xs-4" %>
                <div class="col-xs-8">
                  <%= profile_form.text_field :hometown %>
                </div>
              </div>

              <div class="form-group">
                <%= profile_form.label :current_location, "Currently Lives", class: "col-xs-4" %>
                <div class="col-xs-8">
                  <%= profile_form.text_field :current_location %>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-12">
                  <h4>Contact Information</h4>            
                </div>
              </div>

              <div class="form-group">
                <%= label_tag "Email", nil, class: "col-xs-4" %>
                <div class="col-xs-8">
                  <p class="form-control-static">
                    <%= profile.user.email %>
                  </p>
                </div>
              </div>                          

              <div class="form-group">
                <%= profile_form.label :phone, "Telephone", class: "col-xs-4" %>
                <div class="col-xs-8">
                  <%= profile_form.text_field :phone, placeholder: "555-867-5309" %>
                </div>
              </div>                                                  

          </div>
        </div>

        <div class="col-md-8">

          <div class="form-group">
            <%= profile_form.label :quote do %>
              <h4>Words to Live By</h4>
            <% end %>
            <%= profile_form.text_area :quote %>
          </div>

          <div class="form-group">
            <%= profile_form.label :about do %>
              <h4>About Me</h4>
            <% end %>
            <%= profile_form.text_area :about, rows: 8 %>
          </div>
          
        </div>
      
      </div>
    </div>

    <div class="panel-footer panel-footer-left">
      <%= profile_form.submit "Save Changes", class: "btn btn-primary btn-large" %>
    </div>

<% end %>