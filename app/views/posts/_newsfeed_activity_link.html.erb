<div class="media">
  <div class="pull-left byline-img">
    <% if profile_photo = friend_post.author.profile.profile_photo %>
      <%= image_tag profile_photo.image.url(:thumb), class: "media-object" %>
    <% else %>
      <%= image_tag "user_silhouette_generic.png", class: "media-object" %>
    <% end %>
  </div>

  <div class="media-body">
    <%= link_to friend_post.author.profile.full_name, user_timeline_path(friend_post.author) %><br>
    <span class="light-text">Posted on 
      <time datetime="<%= friend_post.created_at.strftime('%Y/%-m/%-d') %>">
        <%= friend_post.created_at.strftime('%A %-m/%-d/%Y') %>
      </time>
    </span>
  </div>
</div>