<!DOCTYPE html>
<html>
<head>
  <title>Welcome to Danebook!</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

  <%= render "shared/topbar" %>

  <%= render "shared/flash" %>

  <!-- Main body container -->
  <div class="container">

    <% if signed_in_user? %>

      <%= render "shared/profile_cover_photo" %>

      <%= render "shared/middle_nav" %>

    <% end %>

    <%= yield %>

  </div><!-- End main body container -->

</body>
</html>
